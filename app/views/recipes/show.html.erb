<div class="container">
  <h1>Individual Recipe</h1>
    <h4>Title: <%= @recipe.title %></h4>
    <h4>Chef: <%= @recipe.chef %></h4>
    <h4>Ingredients: <%= @recipe.ingredients %></h4>
    <h4>Directions: <%= @recipe.directions %></h4>
    <br><br>
  <div>
    <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-info" role="button">Edit</a>
    <a rel="nofollow" data-method="delete" href="/recipes/<%= @recipe.id %>", class="btn btn-info" role="button">Delete</a>
  </div>
</div>    
